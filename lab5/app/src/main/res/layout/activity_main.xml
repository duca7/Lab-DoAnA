<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="410dp"
        android:layout_height="728dp"
        android:background="@drawable/bk"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/Txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Menu món ngon"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30dp"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/BtnBanhcanh"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Txt1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Bánh canh"
            android:textSize="20dp" />

        <Button
            android:id="@+id/BtnChaoluon"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BtnBanhcanh"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Cháo lươn"
            android:textSize="20dp" />

        <Button
            android:id="@+id/BtnPho"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BtnChaoluon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Phở bò"
            android:textSize="20dp" />

        <Button
            android:id="@+id/BtnThoat"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BtnPho"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Thoát"
            android:textSize="20dp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

