<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/TxtChaoluon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Món cháo lươn"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:padding="20dp"
        android:gravity="center_horizontal" />
    <ImageView
        android:id="@+id/IgmChaoluon"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/chaoluon"
        android:layout_below="@+id/TxtChaoluon"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/BtnBackFromChaoluon"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Trở về"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/IgmChaoluon"
        />
</LinearLayout>